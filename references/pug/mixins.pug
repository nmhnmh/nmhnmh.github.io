//- Declaration
mixin list
  ul
    li foo
    li bar
    li baz
//- Use
+list
+list

// mixin with arguments
mixin pet(name)
  li.pet= name
ul
  +pet('cat')
  +pet('dog')
  +pet('pig')

// mixin with latest js "rest argument" syntax
mixin list(id, ...items)
  ul(id=id)
    each item in items
      li= item

+list('my-list', 1, 2, 3, 4)
